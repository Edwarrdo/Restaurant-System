@page
@model RestaurantSystem.Web.Pages.Menu.DessertsModel
@{
    ViewData["Title"] = "Desserts";
}

<partial name="MenuBarPartial" />

<h2>Desserts</h2>

<table class="table table-striped">
    <thead>
        <tr>
            <th>Name</th>
            <th>Price</th>
            <th>Description</th>
            <th>DishWeight</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var dessert in this.Model.Desserts)
        {
        <tr>
            <td>@dessert.Name</td>
            <td>@dessert.Price</td>
            <td>@dessert.Description</td>
            <td>@dessert.DishWeight</td>
            @if (User.IsInRole("Administrator"))
            {
                //TODO: implement admin part
            }
            else
            {
                <td>
                    <a class="btn btn-success" asp-page-handler="OrderFood" asp-page="/Menu/Order" asp-route-id="@dessert.Id">Order</a>
                </td>

            }
        </tr>
        }
    </tbody>
</table>