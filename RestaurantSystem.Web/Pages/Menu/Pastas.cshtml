@page
@model RestaurantSystem.Web.Pages.Menu.PastasModel
@{
    ViewData["Title"] = "Pastas";
}
<div class="container-fluid">
    <partial name="MenuBarPartial" />

    <h2 class="mb-2">Pasta</h2>
    <div class="table-responsive cancelAndCreate">
        <table class="table table-striped">
            <thead>
                <tr class="text-center">
                    <th>Name</th>
                    <th>Price</th>
                    <th>Description</th>
                    <th>DishWeight</th>
                    <th>Actions</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var pasta in this.Model.Pastas)
                {
                    <tr class="text-center">
                        <td>@pasta.Name</td>
                        <td>@pasta.Price</td>
                        <td>@pasta.Description</td>
                        <td>@pasta.DishWeight</td>
                        @if (User.IsInRole("Administrator"))
                        {
                            <td>
                                <a class="btn btn-danger" aria-label="Close" asp-page-handler="BanFood" asp-page="/Menu/Order" asp-route-id="@pasta.Id">
                                    <span aria-hidden="true">&times;</span>
                                </a>
                            </td>
                        }
                        else
                        {
                            <td>
                                <a class="btn btn-success" asp-page-handler="OrderFood" asp-page="/Menu/Order" asp-route-id="@pasta.Id">Order</a>
                            </td>

                        }
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>