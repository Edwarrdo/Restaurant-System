@page
@model RestaurantSystem.Web.Pages.Menu.PizzasModel
@{
    ViewData["Title"] = "Pizzas";
}
<div class="container-fluid">
    <partial name="MenuBarPartial" />

    <h2 class="mb-2">Pizzas</h2>
    <div class="table-responsive cancelAndCreate">
        <table class="table table-striped ">
            <thead>
                <tr class="text-center">
                    <th>Name</th>
                    <th>Price</th>
                    <th>Description</th>
                    <th>DishWeight</th>
                    <th>Actions</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var pizza in this.Model.Pizzas)
                {
                    <tr class="text-center">
                        <td>@pizza.Name</td>
                        <td>@pizza.Price</td>
                        <td>@pizza.Description</td>
                        <td>@pizza.DishWeight</td>
                        @if (User.IsInRole("Administrator"))
                        {
                            <td>
                                <a class="btn btn-danger" aria-label="Close" asp-page-handler="BanFood" asp-page="/Menu/Order" asp-route-id="@pizza.Id">
                                    <span aria-hidden="true">&times;</span>
                                </a>
                            </td>
                        }
                        else
                        {
                            <td>
                                <a class="btn btn-success" asp-page-handler="OrderFood" asp-page="/Menu/Order" asp-route-id="@pizza.Id">Order</a>
                            </td>

                        }
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>
