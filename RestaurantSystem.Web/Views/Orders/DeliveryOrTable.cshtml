@model DeliveryOrTableBindingModel

<form asp-area="" asp-controller="Orders" asp-action="DeliveryOrTable" method="post" class="form-horizontal">
    <div class="form-group">
        <label asp-for="DeliveryOrTable"></label>
        @Html.DropDownListFor(m => m.DeliveryOrTable, new SelectList(new string[] { "Delivery", "Table" }), "- Please select a service -", new { @class = "form-control" })
        <span asp-validation-for="DeliveryOrTable" class="text-danger"></span>
    </div>
    <div class="form-group">
        <div class="col-sm-10">
            <input type="submit" value="Order" class="btn btn-success" />
            <a asp-area="" asp-controller="Orders" asp-action="DeliveryOrTable" class="btn btn-default">Cancel</a>
        </div>
    </div>
</form>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}