@model TablesBindingModel
<form asp-area="" asp-controller="Orders" asp-action="MakeAnOrder" method="post" class="form-horizontal">
    <div class="form-group">
        <label asp-for="Tables"></label>
        @Html.DropDownListFor(m => m.Tables, new SelectList(Enumerable.Range(1, 50)), null, new { @multiple = "multiple", @class = "form-control selectpicker" })
        @*@Html.DropDownListFor(m => m.Tables, new SelectList(Enumerable.Range(1, 20)), "- Please select a table -", new { @class = "form-control" })*@
        <span asp-validation-for="Tables" class="text-danger"></span>
    </div>
    <div class="form-group">
        <div class="col-sm-10">
            <input type="submit" value="Order" class="btn btn-success" />
            <a asp-area="" asp-controller="Orders" asp-action="PickATable" class="btn btn-default">Cancel</a>
        </div>
    </div>
</form>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}