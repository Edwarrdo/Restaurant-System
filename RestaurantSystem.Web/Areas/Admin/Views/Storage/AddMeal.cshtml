@model MealBindingModel
@{
    ViewData["Title"] = "AddMeal";
}

<h2>AddMeal</h2>

<form asp-area="Admin" asp-controller="Storage" asp-action="AddMeal" method="post" class="form-horizontal">

    <div class="form-group">
        <label asp-for="Name"></label>
        <input asp-for="Name" class="form-control" />
        <span asp-validation-for="Name" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="Products"></label>
        <select required asp-for="Products" class="selectpicker" data-live-search="true" multiple data-selected-text-format="count>3" data-size="5">
            @foreach (var product in ViewBag.Products)
            {
                <option>@product</option>
            }
        </select>
        <span asp-validation-for="Products" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="Price"></label>
        <input asp-for="Price" class="form-control" />
        <span asp-validation-for="Price" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="Description"></label>
        <input asp-for="Description" class="form-control" />
        <span asp-validation-for="Description" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="DishWeight"></label>
        <input asp-for="DishWeight" class="form-control" />
        <span asp-validation-for="DishWeight" class="text-danger"></span>
    </div>
    <div class="form-group">
        <div class="col-sm-10">
            <input type="submit" value="AddMeal" class="btn btn-success" />
            <a asp-area="Admin" asp-controller="Storage" asp-action="AddMeal" class="btn btn-default">Cancel</a>
        </div>
    </div>
</form>
