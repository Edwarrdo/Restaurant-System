@model MealBindingModel
@{
    ViewData["Title"] = "AddMeal";
}

<h2>AddMeal</h2>

<form asp-area="Admin" asp-controller="Storage" asp-action="AddMeal" method="post" class="form-horizontal">

    <div class="form-group">
        <label asp-for="Name"></label>
        <input asp-for="Name" class="form-control" />
        <span asp-validation-for="Name" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="Products">  </label>
        <select asp-for="Products" class="selectpicker" data-live-search="true" multiple data-selected-text-format="count>3" data-size="5">
