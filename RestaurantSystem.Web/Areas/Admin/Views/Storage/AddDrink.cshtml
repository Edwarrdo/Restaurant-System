@model DrinkBindingModel
@{
    ViewData["Title"] = "AddDrink";
}

<h2>Add Drink</h2>

<form asp-area="Admin" asp-controller="Storage" asp-action="AddDrink" method="post" class="form-horizontal">

    <div class="form-group">
        <label asp-for="Name"></label>
        <input asp-for="Name" class="form-control" />
        <span asp-validation-for="Name" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="Ingredients">  </label>
        <select asp-for="Ingredients" class="selectpicker" data-live-search="true" multiple data-selected-text-format="count>3" data-size="5">
            @foreach (var ingredient in ViewBag.Ingredients)
            {
                <option>@ingredient</option>
            }
        </select>
        <span asp-validation-for="Ingredients" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="Price"></label>
        <input asp-for="Price" class="form-control" />
        <span asp-validation-for="Price" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="Description"></label>
        <input asp-for="Description" class="form-control" />
        <span asp-validation-for="Description" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="Milliliters"></label>
        <input asp-for="Milliliters" class="form-control" />
        <span asp-validation-for="Milliliters" class="text-danger"></span>
    </div>
    <div class="form-group">
        <div class="col-sm-10">
            <input type="submit" value="AddDrink" class="btn btn-success" />
            <a asp-area="Admin" asp-controller="Storage" asp-action="AddDrink" class="btn btn-default">Cancel</a>
        </div>
    </div>
</form>
