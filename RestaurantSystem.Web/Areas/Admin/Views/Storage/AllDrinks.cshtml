@model IEnumerable<DrinkConciseViewModel>
@{
    ViewData["Title"] = "All Drinks";
}
<div class="container-fluid">
    <div class="row">
        <div class="col-12">
            <h2 class="m-2">All Drinks</h2>
            <hr />
        </div>
    </div>

    <div class="row">
        <div class="col-sm-12">
            <div class="table-responsive cancelAndCreate">
                <table class="table table-striped">
                    <thead>
                        <tr class="text-center">
                            <th>Name</th>
                            <th>Price</th>
                            <th>Description</th>
                            <th>Milliliters</th>
                        </tr>
                    </thead>
                    <tbody>
                        @Html.DisplayForModel()
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>