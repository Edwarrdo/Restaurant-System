@model EmployeeDetailsViewModel
@{
    ViewData["Title"] = "Details";
}
<div class="container-fluid">
    <div class="row">
        <div class="col-sm-12">
            <h2 class="m-3 text-uppercase">Employee Details:</h2>
            <hr />
        </div>
    </div>
    <div class="row">
        <div class="col-sm-12">
            <div class="table-responsive cancelAndCreate">
                <table class="table table-dark table-striped table-hover">
                    <tr>
                        <th>First Name: </th>
                        <th>@Model.FirstName</th>
                    </tr>
                    <tr>
                        <th>Last Name: </th>
                        <th>@Model.LastName</th>
                    </tr>
                    <tr>
                        <th>Profession: </th>
                        <th>@Model.Profession</th>
                    </tr>
                    <tr>
                        <th>Email: </th>
                        <th>@Model.Email</th>
                    </tr>
                    <tr>
                        <th>Phone Number: </th>
                        <th>@Model.PhoneNumber</th>
                    </tr>
                    <tr>
                        <th>Address: </th>
                        <th>@Model.Address</th>
                    </tr>
                    <tr>
                        <th>EGN: </th>
                        <th>@Model.EGN</th>
                    </tr>
                    <tr>
                        <th>Salary: </th>
                        <th>@Model.Salary$</th>
                    <tr>
                        <th>Experience: </th>
                        <th>@Model.Experience</th>
                    </tr>
                    <tr>
                        <th>Education: </th>
                        <th>@Model.Education</th>
                    </tr>
                    <tr>
                        <th>Hire Date: </th>
                        <th>@Model.HireDate.ToShortDateString()</th>
                    </tr>
                    <tr>
                        <th>Vacation Days: </th>
                        <th>@Model.VacationDays</th>
                    </tr>
                </table>
            </div>
        </div>
    </div>
</div>