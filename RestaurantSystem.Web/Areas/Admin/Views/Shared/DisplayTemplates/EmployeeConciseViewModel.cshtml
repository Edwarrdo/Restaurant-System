@model EmployeeConciseViewModel

<tr>
    <td>@Model.FirstName</td>
    <td>@Model.LastName</td>
    <td>@Model.Profession</td>
    <td>@Model.Email</td>
    <td>@Model.PhoneNumber</td>
    <td>
        <a id="sendButton" asp-area="Admin" asp-controller="Employees" asp-action="Details" asp-route-id="@Model.Id"
           class="btn btn-info mr-2 mb-1">Details</a>
        <a asp-area="Admin" asp-controller="Employees" asp-action="Fire" asp-route-id="@Model.Id"
           class="btn btn-danger mb-1">Fire</a>
    </td>
</tr>