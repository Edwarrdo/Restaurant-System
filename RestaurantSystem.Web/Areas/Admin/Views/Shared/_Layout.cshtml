<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Admin panel</title>

    <environment names="Development">
        <link rel="stylesheet" href="~/lib/wwwroot/lib/bootstrap/dist/css/bootstrap.css" />
        <link rel="stylesheet" href="~/css/admin_layout.css" />
        <link href="~/lib/wwwroot/lib/bootstrap-select/dist/css/bootstrap-select.css" rel="stylesheet" />
    </environment>
    <environment names="Staging,Production">
        <link rel="stylesheet" href="https://ajax.aspnetcdn.com/ajax/bootstrap/4.1.3/css/bootstrap.min.css"
              asp-fallback-href="~/lib/wwwroot/lib/boostrap/dist/css/bootstrap.css"
              asp-fallback-test-class="sr-only" asp-fallback-test-property="position" asp-fallback-test-value="absolute" />
        <link rel="stylesheet" href="~/css/admin_layout.css" asp-append-version="true" />
    </environment>
</head>
<body>
    <nav class="navbar navbar-expand-lg navbar-dark bg-dark">
        <a class="navbar-brand" asp-area="Admin" asp-controller="Home" asp-action="Index">Timev's restaurant</a>
        <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarNavDropdown" aria-controls="navbarNavDropdown" aria-expanded="false" aria-label="Toggle navigation">
            <span class="navbar-toggler-icon"></span>
        </button>
        <div class="collapse navbar-collapse" id="navbarNavDropdown">
            <ul class="navbar-nav">
                <li class="nav-item dropdown">
                    <a class="nav-link dropdown-toggle" href="#" id="navbarDropdownMenuLink" role="button" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
                        Manage Employees
                    </a>
                    <div class="dropdown-menu" aria-labelledby="navbarDropdownMenuLink">
                        <a asp-area="Admin" asp-controller="Employees" asp-action="Create" class="dropdown-item">Hire Employee</a>
                        <a asp-area="Admin" asp-controller="Employees" asp-action="AllEmployees" class="dropdown-item">View all employees</a>
                    </div>
                </li>
                <li class="nav-item dropdown">
                    <a class="nav-link dropdown-toggle" href="#" id="navbarDropdownMenuLink" role="button" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
                        Menu
                    </a>
                    <div class="dropdown-menu" aria-labelledby="navbarDropdownMenuLink">
                        <a href="#" class="dropdown-item disabled">Manage Lunch Menu</a>
                        <a asp-page="/Menu/Salats" class="dropdown-item">Manage Main Menu</a>
                    </div>
                </li>
                <li class="nav-item dropdown">
                    <a class="nav-link dropdown-toggle" href="#" id="navbarDropdownMenuLink" role="button" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
                        Manage Meals
                    </a>
                    <div class="dropdown-menu" aria-labelledby="navbarDropdownMenuLink">
                        <a asp-area="Admin" asp-controller="Storage" asp-action="AddMeal" class="dropdown-item">Add meal</a>
                        <a asp-area="Admin" asp-controller="Storage" asp-action="AddProduct" class="dropdown-item">Add product</a>
                        <a asp-area="Admin" asp-controller="Storage" asp-action="AllMeals" class="dropdown-item">View all meals</a>
                    </div>
                </li>
                <li class="nav-item dropdown">
                    <a class="nav-link dropdown-toggle" href="#" id="navbarDropdownMenuLink" role="button" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
                        Manage Drinks
                    </a>
                    <div class="dropdown-menu" aria-labelledby="navbarDropdownMenuLink">
                        <a asp-area="Admin" asp-controller="Storage" asp-action="AddDrink" class="dropdown-item">Add drink</a>
                        <a asp-area="Admin" asp-controller="Storage" asp-action="AddIngredient" class="dropdown-item">Add ingredient</a>
                        <a asp-area="Admin" asp-controller="Storage" asp-action="AllDrinks" class="dropdown-item">View all drinks</a>
                    </div>
                </li>
            </ul>
        </div>
        @await Html.PartialAsync("_LoginPartial")
    </nav>

                <footer class="footer">
                    <p class="footerParagraph">&copy; 2018 - Timev's restaurant</p>
                </footer>


                  
             

            <partial name="_CookieConsentPartial" />
            @if (TempData.ContainsKey("goodMessage"))
            {
                <div class="alert alert-success alert-dismissible" role="alert">
                    @TempData["goodMessage"]
                    <button type="button" class="close" data-dismiss="alert" aria-label="Close">
                        <span aria-hidden="true">&times;</span>
                    </button>
                </div>

            }
            else if (TempData.ContainsKey("badMessage"))
            {
                <div class="alert alert-danger alert-dismissible" role="alert">
                    @TempData["badMessage"]
                    <button type="button" class="close" data-dismiss="alert" aria-label="Close">
                        <span aria-hidden="true">&times;</span>
                    </button>
                </div>
            }
            @RenderBody()



        

    <environment names="Development">
        <script src="~/lib/wwwroot/lib/popper.js/dist/umd/popper.js"></script>
        <script src="~/lib/wwwroot/lib/jquery/dist/jquery.js"></script>
        <script src="~/lib/wwwroot/lib/bootstrap/dist/js/bootstrap.js"></script>
        <script src="~/lib/wwwroot/lib/bootstrap-select/dist/js/bootstrap-select.js"></script>
        <script src="~/js/admin_layout.js" asp-append-version="true"></script>
    </environment>
        <environment names="Staging,Production">
            <script src="https://ajax.aspnetcdn.com/ajax/jquery/jquery-3.3.1.min.js"
                    asp-fallback-src="~/lib/jquery/dist/jquery.min.js"
                    asp-fallback-test="window.jQuery">
            </script>
            <script src="https://ajax.aspnetcdn.com/ajax/bootstrap/4.1.3/bootstrap.min.js"
                    asp-fallback-src="~/lib/wwwroot/lib/boostrap/dist/js/boostrap.js"
                    asp-fallback-test="window.jQuery && window.jQuery.fn && window.jQuery.fn.modal">
            </script>
            <script src="~/js/admin_layout.js" asp-append-version="true"></script>
        </environment>


        @RenderSection("Scripts", required: false)
</body>
</html>
