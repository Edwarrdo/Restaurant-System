<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Pri Timev</title>

    <environment names="Development">
        <script src="~/lib/wwwroot/lib/popper.js/dist/popper.js"></script>
        <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.css" />
        <link rel="stylesheet" href="~/css/site.css" />
        <link href="~/lib/wwwroot/lib/bootstrap-select/dist/css/bootstrap-select.css" rel="stylesheet" />

    </environment>
    <environment names="Staging,Production">
        <link rel="stylesheet" href="https://ajax.aspnetcdn.com/ajax/bootstrap/4.0.0/css/bootstrap.min.css"
              asp-fallback-href="~/lib/bootstrap/dist/css/bootstrap.min.css"
              asp-fallback-test-class="sr-only" asp-fallback-test-property="position" asp-fallback-test-value="absolute" />
        <link rel="stylesheet" href="~/css/site.min.css" asp-append-version="true" />
    </environment>
</head>
<body>
    <nav class="navbar navbar-expand-md navbar-dark bg-dark sticky-top">
        <div class="container-fluid">
            <a asp-area="Admin" asp-controller="Home" asp-action="Index" class="navbar-brand">
                <img src="~/images/small_logo_white.png" alt="logonav">
            </a>
            <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarResponsive">
                <span class="navbar-toggler-icon"></span>
            </button>
            <div class="collapse navbar-collapse" id="navbarResponsive">
                <ul class="navbar-nav">
                    <li class="nav-item active">
                        <a asp-area="Admin" asp-controller="Home" asp-action="Index" class="nav-link">Home</a>
                    </li>
                    <li class="nav-item">
                        <a asp-area="Admin" asp-controller="Employees" asp-action="Create" class="nav-link">Hire Employee</a>
                    </li>
                    <li class="nav-item">
                        <a asp-area="Admin" asp-controller="Storage" asp-action="AddProduct" class="nav-link">Add Product</a>
                    </li>
                    <li class="nav-item">
                        <a asp-area="Admin" asp-controller="Storage" asp-action="AddIngredient" class="nav-link">Add Ingredient</a>
                    </li>
                    <li class="nav-item">
                        <a asp-area="Admin" asp-controller="Storage" asp-action="AddDrink" class="nav-link">Add Drink</a>
                    </li>
                    <li class="nav-item">
                        <a asp-area="Admin" asp-controller="Storage" asp-action="AddMeal" class="nav-link">Add Meal</a>
                    </li>
                    <li class="nav-item">
                        <a asp-area="Admin" asp-controller="Storage" asp-action="Menu" class="nav-link">Menu</a>
                    </li>
                </ul>
                <div class="ml-auto">
                    @await Html.PartialAsync("_LoginPartial")
                </div>

            </div>
        </div>
    </nav>

    <partial name="_CookieConsentPartial" />

            @RenderBody()



    <hr />
    <footer>
        <p>&copy; 2018 - Pri Timev</p>
    </footer>

    <environment names="Development">
        <script src="~/lib/wwwroot/lib/popper.js/dist/umd/popper.js"></script>
        <script src="~/lib/jquery/dist/jquery.js"></script>
        <script src="~/lib/bootstrap/dist/js/bootstrap.js"></script>
        <script src="~/lib/wwwroot/lib/bootstrap-select/dist/js/bootstrap-select.js"></script>

        <script src="~/js/site.js" asp-append-version="true"></script>
    </environment>
    <environment names="Staging,Production">
        <script src="https://ajax.aspnetcdn.com/ajax/jquery/jquery-3.3.1.min.js"
                asp-fallback-src="~/lib/jquery/dist/jquery.min.js"
                asp-fallback-test="window.jQuery">
        </script>
        <script src="https://ajax.aspnetcdn.com/ajax/bootstrap/4.0.0/bootstrap.min.js"
                asp-fallback-src="~/lib/bootstrap/dist/js/bootstrap.min.js"
                asp-fallback-test="window.jQuery && window.jQuery.fn && window.jQuery.fn.modal">
        </script>
        <script src="~/js/site.min.js" asp-append-version="true"></script>
    </environment>

    <script>
        $(document).ready(function () {
            $("select").attr('data-selected-text-format', 'count>3');
            $("select").attr('data-size', 5);
            $("select").attr('data-live-search', true);
        });
    </script>

    @RenderSection("Scripts", required: false)
</body>
</html>
